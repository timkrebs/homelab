# Packer Secrets Template
# Copy this file to secrets.pkrvars.hcl and fill in your values
# DO NOT commit secrets.pkrvars.hcl to version control!

# Proxmox API Configuration
proxmox_api_url          = "https://pve01.proxcloud.io:8006/api2/json"
proxmox_api_token_id     = "packer@pam!packer-token"
proxmox_api_token_secret = "your-token-secret-here"
proxmox_skip_tls_verify  = true

# Proxmox Node
proxmox_node = "pve01"

# VM Configuration
vm_id        = 9000
storage_pool = "local-lvm"

# SSH Credentials (must match user-data in http/ directory)
ssh_username = "packer"
ssh_password = "packer"
